<Window x:Class="Peluqueria.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Peluqueria"
        mc:Ignorable="d"
        Title="Login Peluqueria" Height="650" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
        <Window.Resources>
            <Style TargetType="Label">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="#CCCCCC"/>
                <Setter Property="Background" Value="#333A4C"/>
                <Setter Property="Opacity" Value="1.0"/>
                <Setter Property="BorderBrush" Value="#4A5568"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="0,10,0,0"/>
            </Style>
            <Style TargetType="PasswordBox">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="#CCCCCC"/>
                <Setter Property="Background" Value="#333A4C"/>
                <Setter Property="Opacity" Value="1.0"/>
                <Setter Property="BorderBrush" Value="#4A5568"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="0,10,0,0"/>
            </Style>

            <Style x:Key="BotonRedondeado" TargetType="Button">
                <Setter Property="Background" Value="#FFD36F"/>
                <Setter Property="Foreground" Value="#222831"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Padding" Value="15,8"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                            CornerRadius="8"
                            BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFC65C"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FFB949"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="SmallNavLinkButton" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Padding" Value="5"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3A435A"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </Window.Resources>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#F15B4C">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                    <TextBlock Text="GESTIÓN DE USUARIOS"
                           Foreground="White"
                           FontSize="30"
                           FontWeight="Bold"
                           TextAlignment="Center"
                           Margin="0,0,0,10"/>
                    <TextBlock Text="Administra y organiza tus usuarios del sistema de peluquería de forma sencilla."
                           Foreground="White"
                           FontSize="16"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,0,0,30"/>

                    <Image Source="/Peluqueria;component/imagenes/rocket_icon.png" 
                       Width="150" Height="150" Margin="0,20,0,0"/>
                </StackPanel>
            </Border>

        <Grid Grid.Column="1" Background="#2C3446">
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15,15,20,0">
                <Button Content="Login" Style="{StaticResource SmallNavLinkButton}" Margin="0,0,10,0"/>
                <Button x:Name="btnAbrirGestion" Content="Abrir Gestión" Background="#F15B4C" Foreground="White" 
                            Padding="10,5" FontSize="14" FontWeight="SemiBold" Click="btnAbrirGestion_Click" Height="60"/>
            </StackPanel>

            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

                <Label Content="USUARIO (LOGIN)"/>
                <TextBox x:Name="txtNombre" Tag="Ingresa el nombre de usuario"/>

                <Label Content="CONTRASEÑA"/>
                <PasswordBox x:Name="pwdContra" Tag="Ingresa la contraseña"/>

                <Label Content="CORREO ASOCIADO (Lectura)" Visibility="Collapsed"/>
                <TextBox x:Name="txtCorreo" IsEnabled="False" Visibility="Collapsed" Tag="Correo del empleado asociado"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,10">
                    <Button x:Name="btnIngresar" Content="INGRESAR" Style="{StaticResource BotonRedondeado}" Margin="0,0,10,0" Width="250" Click="btnIngresar_Click"/>
                    <Button x:Name="btnAceptar" Content="AÑADIR" Style="{StaticResource BotonRedondeado}" Width="120" Visibility="Collapsed"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20" Visibility="Collapsed">
                    <Button x:Name="btnActualizar" Content="ACTUALIZAR CONTRASEÑA" Style="{StaticResource BotonRedondeado}" Margin="0,0,10,0" Width="220"/>
                    <Button x:Name="btnBorrar" Content="BORRAR USUARIO" Style="{StaticResource BotonRedondeado}" Width="180"/>
                </StackPanel>

                <Label Content="LISTA DE USUARIOS" HorizontalAlignment="Center" Margin="0,10,0,0" Visibility="Collapsed"/>
                <ListBox x:Name="lstBxUsuarios" Height="150" Width="280" Visibility="Collapsed"
                             SelectionChanged="lstBxUsuarios_SelectionChanged"/>

                <Button x:Name="btnSalir"
                            Content="SALIR"
                            Click="btnSalir_Click"
                            Margin="0,20,0,0"
                            Width="150"
                            Height="45"
                            Style="{StaticResource BotonRedondeado}"/>
            </StackPanel>
        </Grid>
    </Grid>
    </Window>
